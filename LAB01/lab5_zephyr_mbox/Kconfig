menu "Lab 5: Mailbox options"

config APP_SERVER_PRIORITY
    int "Server thread priority"
    default 1
    range 0 7

config APP_CLIENT_PRIORITY
    int "Client thread priority"
    default 4
    range 0 7

config APP_CLIENT_BURST
    int "Số thông điệp trong mỗi burst"
    default 5
    range 1 16

config APP_CLIENT_PAUSE_MS
    int "Thời gian nghỉ giữa hai burst (ms)"
    default 200
    range 0 2000

config APP_SERVER_WORK_MS
    int "Server xử lý mô phỏng (ms)"
    default 5
    range 0 200

config APP_PAYLOAD_BYTES
    int "Kích thước payload mỗi thông điệp"
    default 32
    range 4 256

endmenu

source "Kconfig.zephyr"
